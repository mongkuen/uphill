<%= form_for @user, html: { class: "form-signin" } do |f| %>
  <%= render 'shared/errors', object: @user %>
  <h2 class="form-signin-heading">Start Uphill</h2>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control form-top", placeholder: "Email address" %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control form-mid", placeholder: "Password" %>
  <%= f.label :password_confirmation, class: "sr-only" %>
  <%= f.password_field :password_confirmation, class: "form-control form-bottom", placeholder: "Confirm Password" %>
  <%= f.submit "Register", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
