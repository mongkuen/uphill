<%= form_for @user, html: { class: "form-signin" } do |f| %>
  <%= render 'shared/errors', object: @user %>
  <%= render 'shared/flash_messages' %>
  <h2 class="form-signin-heading">Change Your Info</h2>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control form-top", placeholder: "Email address" %>
  <%= f.label :name, class: "sr-only" %>
  <%= f.text_field :name, class: "form-control form-mid2", placeholder: "Name (Optional)" %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control form-mid", placeholder: "New Password (Optional)" %>
  <%= f.label :password_confirmation, class: "sr-only" %>
  <%= f.password_field :password_confirmation, class: "form-control form-bottom", placeholder: "Confirm New Password" %>
  <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= link_to "Cancel my account", cancel_user_path(current_user), class: "small text-muted" %>
